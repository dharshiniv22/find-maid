<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <SearchView
            android:id="@+id/SearchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/lightblue"
            android:queryHint="Search here" />

        <ImageView
            android:id="@+id/notificationButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Notifications"
            android:src="@drawable/notificationbell" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clothes_button"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/laundry_button"
                android:contentDescription="Laundry"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/cooking"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/cooking"
                android:contentDescription="Cooking"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/homecleaning"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/homecleaning"
                android:contentDescription="Home Cleaning"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/dishwishing"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/dishwishing"
                android:contentDescription="Dishwashing"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/AllServices"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/allwork"
            android:contentDescription="All Services"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>
