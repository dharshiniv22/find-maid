<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivMaidPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/samplemaid"
            android:contentDescription="Maid Photo"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvMaidName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maid Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvMaidAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 30"
                android:textSize="14sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Cooking"
                android:textSize="14sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvMaidSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary: â‚¹5000"
                android:textSize="14sp"
                android:textColor="#008000" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
